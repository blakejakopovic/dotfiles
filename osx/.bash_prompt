# ~/.osx/.bash_prompt

# Enable GIT current branch info
[[ `uname -s` == "Darwin" ]] && \
    git_completion="/usr/local/etc/bash_completion.d/git-prompt.sh"
[[ `uname -s` == "Linux"  ]] && \
    git_completion="/etc/bash_completion.d/git"

if [ -f "${git_completion}" ]; then
    source "${git_completion}"
    export GIT_PS1_SHOWDIRTYSTATE=1

    ## blakejakopovic@BMBP ~/OSS/bitcoin (master *) $
    PS1="[bash] \[\e[0;37m\]\u@\h \w\[\e[0;32m\]\$(__git_ps1)\e\[m \[\e[01;37m\]\\$\[\e[0;37m\] "
fi
