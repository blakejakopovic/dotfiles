[core]
	editor = nano
	excludesfile = ~/.gitignore_global
	quotepath = false
[alias]
	b = branch
	s = status
	ls = ls-files
	c = commit
	cm = commit -m
	ch = checkout
	rs = rebase --squash -i
	ms = merge --squash
	smu = submodule update --init --recursive
	l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	restore = !git checkout $(git rev-list -n 1 HEAD -- \"$1\")^ -- \"$1\"
	aa = add --all --intent-to-add
	ap = add --patch
	update-timestamp = commit --amend --reset-author
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[push]
    default = current
[branch]
	autosetuprebase = always
[advice]
	statusHints = true
