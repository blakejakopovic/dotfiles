# ~/.dotfiles/arch/.bash_prompt

# Left Prompt
function liveroot {
  check=`cat /proc/cmdline | grep oroot=`
  if [ $? -eq 0 ]; then
    echo 1 # TRUE
  else
    echo 0
  fi
}

function liveroot_p {
  if [ $(liveroot) -eq 1 ]; then
    echo ["LIVE] "
  fi
}

## [LIVE [bash] blakejakopovic@BMBP ~/OSS/bitcoin $
PS1="$(liveroot_p)[bash] \[\e[0;37m\]\u@\h \w \[\e[01;37m\]\\$\[\e[0;37m\] "

export PS1