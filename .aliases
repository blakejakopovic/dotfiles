ossgc() {
  url=$1
  project=`echo $url | awk -F/ '{print $(NF-0)}'`
  projectpath="$HOME/OSS/$project"
  mkdir -p "$HOME/OSS"
  git clone "$url" "$projectpath"
  cd $projectpath
}


