# Audio
aud2m4r() { # aud2m4r INPUT OUTPUT
  filename=$(basename "$1")
  extension="${filename##*.}"
  filename="${filename%.*}"
  output="$filename.m4r"
  afconvert -f m4af "$1" "$output"
}

# Video
vid2ipad() { # vid2ipad INPUT
  filename=$(basename "$1")
  extension="${filename##*.}"
  filename="${filename%.*}"
  output="$filename.mp3.$extension"
  ffmpeg -i "$1" -vcodec copy -acodec mp3 "$output"
}

